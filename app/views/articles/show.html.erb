<div class="container">
    <h2 class="article-title"><%= @article.title %></h2>
    <h6>By: <%= @article.user.first_name %> <%= @article.user.last_name %></h6>
    <h6>In: <%= @article.city.name %>
    <hr>
    <p><%= @article.body %></p>
        <% if (current_user ==  @article.user) %>
          <span><%= link_to "Edit Article", edit_article_path(@article.id) %></span>
        <% else %>
          <span class="hide"><%= link_to "Edit Article", edit_article_path(@article.id) %></span>
        <% end %>
    <hr>
    <%= button_to " Delete Article ", {action:"destroy", id: @article.id}, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
