
<h2>Add A New Article</h2>

<%= form_for @article, url: '/articles', method: 'post' do |f| %>
  <label for="title"> Article Title </label>
    <%= f.text_field :title  %>
  <label for="body"> What Did You Do? : </label>
    <%= f.text_area :body %>
  <%= f.hidden_field :city_id, :value => @city.id %>
  <%= f.submit " Submit Your Article! " %>
<% end %>
