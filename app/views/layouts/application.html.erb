<!DOCTYPE html>
<html>
  <head>
    <title>Princess : Vagabond</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/css?family=Bilbo|Fredericka+the+Great|Princess+Sofia|Sacramento" rel="stylesheet">
    <link rel="shortcut icon" href="../favicon.ico" type="image/png">

    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>


  </head>


  <body>
  <!-- Navigation -->
    <div class="navigation amber lighten-3">
      <!-- User Nav -->
      <ul>
        <div>
          <% if current_user %>
            <li class="nav-link"><%= link_to " Home ", root_path %></li>
            <li class="nav-link"><%= link_to " My Profile ", user_path(current_user) %></li>
            <li class="nav-link logout-link"><%= link_to " Logout ", logout_path %></li>
      </ul>

      <!-- Default Nav -->
      <ul>
          <% else %>
            <li><%= link_to " Home ", root_path %> | </li>
            <li><%= link_to " Login ", login_path %> | </li>
            <li><%= link_to " Sign Up ", new_user_path %></li>
          <% end %>
        </div>
      </ul>
    </div>

  <!-- Header -->
    <div class="container">
      <header>
        <span class="headline">Princess Vagabond</span>
        <span class="tagline">I Can Show You The World!</span>

        <!-- Flash Messages -->
        <div class="flash-msg"><% flash.each do |name, msg| %>
          <p>
            <small><%= name.capitalize %> : <%= msg %></small>
          </p>
          <% end %>
        </div> <!--ends flash.each-->

      </header>
    </div>

  <%= yield %>

    </div>

    <footer class="amber lighten-3">
      <p>TeamTeamwork Â© 2017</p>
    </footer>

  </body>
</html>
